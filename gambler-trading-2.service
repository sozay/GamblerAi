[Unit]
Description=GamblerAI Trading Bot - Instance 2 (Gap Scanner + Mean Reversion)
After=network.target

[Service]
Type=simple
User=ozay
WorkingDirectory=/home/ozay/GamblerAi
Environment="PATH=/home/ozay/GamblerAi/venv/bin"
ExecStart=/home/ozay/GamblerAi/venv/bin/python scripts/alpaca_paper_trading.py \
  --continuous \
  --instance-id 2 \
  --config config.yaml
Restart=always
RestartSec=15
StandardOutput=append:/home/ozay/GamblerAi/logs/trading-2.log
StandardError=append:/home/ozay/GamblerAi/logs/trading-2.error.log

[Install]
WantedBy=multi-user.target
